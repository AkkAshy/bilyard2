generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BilliardTable {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  espIpAddress String    @default("192.168.1.100") // IP адрес ESP-12F для этого стола
  gpioPin      Int       @default(2) // GPIO пин на ESP для управления люстрой
  hourlyRate   Int       @default(130000) // Цена за час в сумах (по умолчанию 130,000)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
}

model Session {
  id             String        @id @default(cuid())
  tableId        Int
  table          BilliardTable @relation(fields: [tableId], references: [id], onDelete: Cascade)
  startedAt      DateTime      @default(now())
  endedAt        DateTime?
  duration       Int? // Запланированная продолжительность в минутах (null = свободное время)
  actualDuration Int? // Фактическая продолжительность в минутах
  hourlyRate     Int // Цена за час на момент начала сессии (сохраняем для истории)
  totalCost      Int? // Итоговая стоимость в сумах
  status         SessionStatus @default(ACTIVE)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([tableId])
  @@index([status])
  @@index([startedAt])
}

enum SessionStatus {
  ACTIVE
  COMPLETED
  EXPIRED
}

// Настройки системы (для глобальной цены по умолчанию)
model Settings {
  id                String   @id @default("default")
  defaultHourlyRate Int      @default(130000) // Цена по умолчанию для новых столов
  updatedAt         DateTime @updatedAt
}
